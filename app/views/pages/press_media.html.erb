      </div>

      <div class="news 2011-news hidden">
        <% @press_releases.each do |press_release| %>
          <% if press_release.date.year == 2011 %>
            <%= render 'pages/archive_press_cuttings', press_release: press_release %>
          <% end %>
        <% end %>
      </div>

      <div class="news 2010-news hidden">
        <% @press_releases.each do |press_release| %>
