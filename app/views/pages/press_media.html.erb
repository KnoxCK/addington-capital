        <% end %>
      </div>

      <div class="news 2014-news hidden">
        <% @press_releases.each do |press_release| %>
          <% if press_release.date.year == 2014 %>
            <%= render 'pages/archive_press_cuttings', press_release: press_release %>
          <% end %>
        <% end %>
      </div>

      <div class="news 2013-news hidden">
        <% @press_releases.each do |press_release| %>
          <% if press_release.date.year == 2013 %>
            <%= render 'pages/archive_press_cuttings', press_release: press_release %>
          <% end %>
        <% end %>
      </div>

      <div class="news 2012-news hidden">
