	</div>
</div>
<div class="properties-tabs">
	<h5><%= link_to "RETAIL", "" %></h5>
	<h5><%= link_to "RESIDENTIAL", "" %></h5>
	<h5><%= link_to "OFFICES", "" %></h5>
</div>
<div class="properties-wrapper">

	<div class="properties-boxes-top">

  <% retail_case_study_count = 1 %>
  <% @retail_case_studies.each do |case_study| %>
  <% if retail_case_study_count == 4 %>
      </div>
      <div class="properties-boxes-bottom">
    <% end %>
		<div class="properties-box" id=<%= case_study.title %>>
			<%= link_to "" do %>
				<%= cl_image_tag(case_study.photo, width: 150, height: 100, crop: :fill) %>
				<div class="properties-text">
					<h5><%= case_study.title.upcase %></h5>
					<p><%= case_study.summary %></p>
					<h6>[ READ MORE ]</h6>
				</div>
				<div class="property-box-overlay"></div>
			<% end %>
		</div>
      <% retail_case_study_count += 1 %>
    <% end %>
  </div>


</div>

<div class="property-wrapper">
